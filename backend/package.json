{
  "name": "jasb-backend",
  "version": "1.0.0",
  "description": "JASB expense splitting app backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=../.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=../.env dist/index.js",
    "migrate": "node --env-file=../.env run-migrations.js",
